
@model Bitirme.Eticaret.Core.Model.Entity.Product
@{
    ViewBag.Title = "Ürün Detayı";
}

<h2>Ürün Detayı</h2>
<div class="productBox">
    <p class="title">@Model.Name</p>
    <img src="@Model.Imageurl" />
    <p></p>
    <p>
        @Model.Brand
    </p>
    <p>
        @Model.Price.ToString("##,## ₺")
    </p>
    <a href="#" class="btn btn-success"><i class="fas fa-shopping-basket"></i> Sepete At</a>
</div>

