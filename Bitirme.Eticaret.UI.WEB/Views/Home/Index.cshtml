@model List<Bitirme.Eticaret.Core.Model.Entity.Product>
@{
    ViewBag.Title = "Index";
    var isLogin = (bool)ViewBag.IsLogin;
}

<h2>Hoşgeldiniz</h2>
@{
    foreach (var item in Model)
    {
        <div class="productBox">
            <p class="title">@item.Name</p>
            <img src="@item.Imageurl" />
            <p></p>
            <p>
                @item.Brand
            </p>
            <p>
                @item.Price.ToString("##,## ₺")
            </p>
            <a href="/urun/@item.Name.Replace(" ","-")/@item.ID" class="btn btn-danger"> İncele</a>
            @{
                if (isLogin == true)
                {
                    <a href="#" data-pID="@item.ID" class="btn btn-success addBasket"><i class="fas fa-shopping-basket"></i> Sepete At</a>
                }
            }

        </div>

    }
}
<div id="andModal" title="Teşekkür Ederiz. :)">
    Ürün Sepete Eklendi..
</div>
<style>
    .productBox {
        width: 200px;
        float: left;
        margin: 10px;
        padding: 3px;
        border: 2px solid #808080;
    }

        .productBox img {
            width: 100%;
        }

        .productBox.title {
            font-weight: bold;
            text-align: center;
        }

        .productBox p {
            text-align: center;
        }
</style>

@section script{

    <script type="text/javascript">

        $( function() {
            $("#andModal").dialog({
                autoOpen: false,
                show: {
                    effect: "blind",
                    duration: 1000
                },
                hide: {
                    effect: "explode",
                    duration: 1000
                }
            });

            $(".addBasket").on("click", function () {

                var pid = $(this).attr("data-pID");
                $.post("/Basket/AddProduct?productID="+pid+"&quantity=1", function(data){

                    $("#andModal").dialog("open");
                    
                });
            return false;
        });
      } );

    </script>


}